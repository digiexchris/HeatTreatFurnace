{
  "name": "furnace-simulator",
  "version": "1.0.0",
  "description": "Development simulator for Furnace frontend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "generate": "flatc --ts --gen-object-api -o src/generated ../proto/furnace.fbs && node -e \"const fs=require('fs'),p=require('path'),d='src/generated';const walk=(dir)=>fs.readdirSync(dir).forEach(f=>{const fp=p.join(dir,f);fs.statSync(fp).isDirectory()?walk(fp):fp.endsWith('.ts')&&!fs.readFileSync(fp,'utf8').startsWith('// @ts-nocheck')&&fs.writeFileSync(fp,'// @ts-nocheck\\n'+fs.readFileSync(fp,'utf8'))});walk(d)\"",
    "build": "npm run generate && node build.js",
    "watch": "node build.js --watch",
    "start": "node dist/server.js",
    "dev": "node --watch dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "4.21.2",
    "flatbuffers": "24.12.23",
    "multer": "1.4.5-lts.1",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/multer": "1.4.12",
    "@types/node": "22.15.29",
    "@types/ws": "8.18.1",
    "esbuild": "0.20.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

